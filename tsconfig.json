{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "dist",
		"module": "esnext",
		"target": "esnext",
		"lib": ["esnext"],
		"sourceMap": true,
		"allowJs": true,
		"jsx": "react-native",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"paths": {
			"@app/*": ["./app/*"],
			"@assets/*": ["./assets/*"],
			"@components/*": ["./components/*"],
			"@config/*": ["./config/*"],
			"@constants/*": ["./constants/*"],
			"@models/*": ["./models/*"],
			"@services/*": ["./services/*"],
			"@types/*": ["./types/*"],
			"@stores/*": ["./stores/*"],
			"@features/*": ["./features/*"],
			"@utils/*": ["./utils/*"]
		}
	},
	"include": ["./**/*"],
	"exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
